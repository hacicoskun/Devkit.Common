<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
 
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Devkit.Common.Jobs</PackageId>
        <Version>1.0.0</Version>
        <Authors>Devkit Team</Authors>
        <Company>Devkit</Company>
        <Description>Cross-provider Job Scheduling (Hangfire and Quartz) for PostgreSQL/MSSQL-based .NET apps.</Description>
        <PackageTags>jobs;scheduler;hangfire;quartz;postgresql;mssql</PackageTags>
        <RepositoryUrl>https://github.com/devkit</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="9.0.11" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.11" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.11" />

        <!-- Hangfire & Storage Providers -->
        <PackageReference Include="Hangfire.AspNetCore" Version="1.8.22" />

        <PackageReference Include="Hangfire.Core" Version="1.8.22" />
        <PackageReference Include="Hangfire.PostgreSql" Version="1.20.12" />
        <PackageReference Include="Hangfire.SqlServer" Version="1.8.22" />

        <!-- Quartz Scheduler -->
        <PackageReference Include="Quartz" Version="3.15.1" />
        <PackageReference Include="Quartz.Extensions.Hosting" Version="3.15.1" />

    </ItemGroup>

</Project>
